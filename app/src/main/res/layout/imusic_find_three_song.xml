<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_14"
    android:layout_marginStart="@dimen/dp_14">
    <androidx.cardview.widget.CardView
        android:id="@+id/three_find_menu"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="@dimen/dp_62"
        android:layout_height="@dimen/dp_62"
        app:cardBackgroundColor="@color/translate"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/three_iv_cover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon2"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/find_three_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有历有"
        android:textColor="@color/colorTextLight"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/three_find_menu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"/>

    <TextView
        android:id="@+id/three_find_tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有历有"
        android:textColor="@color/colorGrayDark"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/find_three_tv_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_11.5"
        android:layout_marginStart="@dimen/dp_10" />

    <TextView
        android:id="@+id/three_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再遇见你的那一刻 好汉众星介于尘土"
        android:textColor="@color/colorGrayDark"
        android:textSize="13sp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/three_find_menu"
        app:layout_constraintTop_toBottomOf="@id/find_three_tv_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"/>

    <ImageView
        android:id="@+id/find_three_iv_play"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_46"
        android:layout_centerInParent="true"
        android:tint="@color/colorPrimary"
        android:layout_marginEnd="@dimen/dp_8"
        android:src="@drawable/play_btn_play_pause_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>