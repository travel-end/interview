<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16" />

        <com.journey.interview.customizeview.tablayout.CommonTabLayout
            android:id="@+id/local_title_tabLayout"
            android:layout_width="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            app:tl_textBold="SELECT"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/colorBlack2"
            app:tl_textUnselectColor="@color/colorGray"
            app:tl_textsize="16sp" />
    </FrameLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/local_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>