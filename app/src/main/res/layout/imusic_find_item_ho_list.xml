<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/find_menu"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        app:cardBackgroundColor="@color/translate"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/dp_4">


        <ImageView
            android:id="@+id/find_iv_menu_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/icon1" />
        <TextView
            android:id="@+id/find_tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="130万"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:drawableStartCompat="@drawable/ic_sanj" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/find_tv_desc"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:text="治愈百宝箱 | 无法预测的未来，才让人"
        android:textColor="@color/colorBlack"
        android:maxLines="2"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_10" />


</LinearLayout>