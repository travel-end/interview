<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="background">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="imusic_wel_style" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/imusic_wel</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="LockScreenViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="bg">
        <item name="bl_corners_radius">4dp</item>
        <item name="bl_solid_color">#E3B666</item>
        <item name="bl_stroke_color">#8c6822</item>
        <item name="bl_stroke_width">2dp</item>
    </style>

    <style name="material_style" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>
    <style name="material_style2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


    <!--rounded: 表示圆角 还有个cut表示将圆角部分裁切掉
    setAllCornerSizes(ShapeAppearanceModel.PILL)可以直接实现圆形效果。
    -->
    <style name="shape_appearance_image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_pop_in</item>
        <item name="android:windowExitAnimation">@anim/translate_pop_out</item>
    </style>
    <style name="title_text">
        <item name="textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>